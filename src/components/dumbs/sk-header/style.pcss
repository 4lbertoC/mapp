@import './../../../global-style/basics/media-queries.pcss';

:host {
  display: flex;
  flex-direction: column;
  align-items: left;
  width: 100%;
  padding-right: 40px;
  box-sizing: border-box;

  @media (--medium) {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
}


.Logo {
  display: block;
  width: 100%;
  max-width: 300px;
  user-select: none;
}


.Logo:hover {
  animation: HueRotate 1s infinite linear;
}
