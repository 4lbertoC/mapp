:host {
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  flex-direction: column;
}

.mapp-schedule-header {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.mapp-schedule-filter-button {
  margin-top: 16px;
}

.mapp-schedule-mentor-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  margin-top: 16px;
  overflow: auto;
  height: calc(100vh - 120px);
}

mapp-mentor-card {
  margin: 16px;
}